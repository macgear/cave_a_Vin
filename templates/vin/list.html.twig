{% extends 'base.html.twig' %}

{% block body %}

<table class="table table-striped">
  <thead>
    <tr>
      <th>Région</th>
      <th scope="col">Nom</th>
      <th scope="col">Millésime</th>
      <th scope="col">Contenance</th>
      <th scope="col">Robe</th>
      <th scope="col">Stock</th>
      <th scope="col">Visuel</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {% for vin in vins %}
        <tr>
        <th>{{ vin.region.nom }}</th>
        <th scope="row">{{ vin.nom }}</th>
        <td>{{ vin.millesime }}</td>
        <td>{{ vin.contenance }}</td>
        <td>{{ vin.robe }}</td>
        <td>{{ vin.qttStock }}</td>
        <td>{{ vin.images }}</td> {# mettre une balise img voir la doc pour le faire voir generic URL #}
        <td><a class="btn btn-secondary" href='{{ path('vin.show', {id:vin.id}) }}'>Voir</a></td>
        </tr>
    {% endfor %}
  </tbody>
</table>
<br>
<a class="btn btn-info" href = "{{ path('vin.new') }}"> Nouveau Vin </a>
{% endblock %}
